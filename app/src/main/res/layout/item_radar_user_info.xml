<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_radar_item_avater"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/default_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嗨跑用户"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_radar_item_avater"
            android:layout_toEndOf="@+id/iv_radar_item_avater"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_radar_item_username"/>

        <TextView
            android:id="@+id/tv_radar_item_distance"
            android:layout_toRightOf="@+id/iv_radar_item_avater"
            android:layout_alignBottom="@id/iv_radar_item_avater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="100米"
            android:textSize="15sp"
            />

        <TextView
            android:layout_toLeftOf="@+id/tv_radar_item_rundistance"
            android:layout_alignBottom="@+id/tv_radar_item_distance"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="已跑"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_radar_item_rundistance"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/yellow"
            android:text="100KM"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@color/alpha_3"/>

</LinearLayout>