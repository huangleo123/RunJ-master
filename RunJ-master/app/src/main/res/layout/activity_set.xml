<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        style="@style/topbar_bg">

        <ImageView
            style="@style/topbar_left_btn"
            android:src="@mipmap/back"/>

        <TextView
            style="@style/topbar_title"
            android:text="设置"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp">
            </RelativeLayout>

            <!--<RelativeLayout-->
                <!--android:id="@+id/set_notification_relative"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="44dp"-->
                <!--android:background="?android:attr/selectableItemBackground">-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="推送通知设置"-->
                    <!--android:textSize="16sp"-->
                    <!--android:layout_marginLeft="12dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:textColor="@color/text_black"/>-->
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/goimg"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="12dp"/>-->

            <!--</RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/set_update_version_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_keyboard_arrow_right_black_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/alpha_3"/>
            <RelativeLayout
                android:id="@+id/set_feedback_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_keyboard_arrow_right_black_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/alpha_3"/>
            <RelativeLayout
                android:id="@+id/set_clear_cache_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清理缓存"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_keyboard_arrow_right_black_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/alpha_3"/>
            <RelativeLayout
                android:id="@+id/set_about_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_keyboard_arrow_right_black_18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"/>
            <RelativeLayout
                android:id="@+id/set_sign_out_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/red"/>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
